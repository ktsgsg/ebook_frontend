# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source files
COPY tsconfig.json ./
COPY src/ ./src/

# Build TypeScript
RUN npm run build

# Production stage
FROM node:20-alpine AS runner

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install production dependencies only
RUN npm ci --omit=dev

# Copy built files from builder
COPY --from=builder /app/dist ./dist
COPY static/ ./static/
COPY ico.svg ico.svg

# Expose port
EXPOSE 8000

# Set environment variables (can be overridden)
ENV PORT=8000
ENV BACKEND_API_URL=http://localhost:3000
ENV FILE_SERVER_URL=http://localhost:8080

# Start the application
CMD ["node", "dist/index.js"]
